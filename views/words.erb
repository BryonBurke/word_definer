<h1>Word Definer</h1>



<h3>Current Word:</h3>
<% if @words.any? %>
  <ul>
    <% @words.each do |word| %>
      <li><a href="/words/<%= word.id %>"><%= word.name %></a></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no records to display.</p>
<% end %>
<form class="" action="/words/new" method="get">
  <button type="submit" name="button">Add a new word</button>
</form>
